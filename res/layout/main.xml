<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<include layout="@layout/total_price" />
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
		<ImageView
			android:id="@+id/cashBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="checkout"
			android:src="@drawable/cash"
			android:contentDescription="Cash"/>
		<ImageView
			android:id="@+id/checkBtn"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="checkout" 
			android:src="@drawable/check" 
			android:contentDescription="Check" />
		<ImageView
			android:id="@+id/creditBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="checkout"
			android:src="@drawable/credit"
			android:contentDescription="Credit" />
		<ImageView
			android:id="@+id/giftBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="checkout"
			android:src="@drawable/gift"
			android:contentDescription="Gift Card" />
		<ImageView
			android:id="@+id/bitcoinBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="checkout"
			android:src="@drawable/bitcoin"
			android:contentDescription="Bitcoin" />
	</LinearLayout>
</LinearLayout>

